<yandex>
    <clickhouse_remote_servers>
        <cluster_facing>
            <!-- shard 01 -->
            <shard>
                <replica>
                    <priority>1</priority>
                    <host>ch_aws_1</host>
                    <port>9000</port>
                </replica>
                <replica>
                    <priority>1</priority>
                    <host>ch_aws_2</host>
                    <port>9000</port>
                </replica>
                <replica>
                    <priority>0</priority>
                    <host>ch_hetzner_1</host>
                    <port>9000</port>
                </replica>
                <replica>
                    <priority>0</priority>
                    <host>ch_hetzner_2</host>
                    <port>9000</port>
                </replica>
            </shard>
        </cluster_facing>
        <cluster_computation>
            <!-- shard 02 -->
            <shard>
              <replica>
                  <host>ch_hetzner_1</host>
                  <port>9000</port>
              </replica>
              <replica>
                  <host>ch_hetzner_2</host>
                  <port>9000</port>
              </replica>
            </shard>
        </cluster_computation>
    </clickhouse_remote_servers>

    <zookeeper-servers>
        <node index="1">
            <host>zookeeper</host>
            <port>2181</port>
        </node>
    </zookeeper-servers>
</yandex>
